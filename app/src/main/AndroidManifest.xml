<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swayam.sqliteroomsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SqliteRoomUsersListActivity"/>
        <activity android:name=".Activities.SqliteRoomRegistrationActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activities.SampleNavigationDrawer"/>
        <activity android:name=".Activities.SqliteRoomEditInfoActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activities.SqliteRoomLoginActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>