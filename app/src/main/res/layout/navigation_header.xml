        <android.support.v7.widget.AppCompatImageView
        android:id="@+id/profile_pic"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
